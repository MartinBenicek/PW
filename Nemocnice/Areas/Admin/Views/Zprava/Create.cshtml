@model LekarskaZprava

@{
    ViewData["Title"] = "Create Lekarska Zprava";
}

<h2>Create Lekarska Zprava</h2>

<form asp-area="Admin" asp-controller="Zprava" asp-action="Create" method="post">
    <div class="form-group my-3">
        <label asp-for="KartaID"></label>
        <textarea asp-for="KartaID" class="form-control"></textarea>
        <span asp-validation-for="KartaID" class="text-danger"></span>
    </div>
    <div class="form-group my-3">
        <label asp-for="Zprava"></label>
        <textarea asp-for="Zprava" class="form-control"></textarea>
        <span asp-validation-for="Zprava" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label class="form-label" asp-for="Datum"></label>
        <input class="form-control" asp-for="Datum" />
        <span asp-validation-for="Datum" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
