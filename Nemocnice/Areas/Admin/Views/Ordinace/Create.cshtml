@model Nemocnice.application.ViewModels.OrdinaceViewModel

<h2>Create Ordinace</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group my-3">
        <label asp-for="Budova"></label>
        <input asp-for="Budova" class="form-control" />
        <span asp-validation-for="Budova" class="text-danger"></span>
    </div>

    <div class="form-group my-3">
        <label asp-for="Mistnost"></label>
        <input asp-for="Mistnost" class="form-control" />
        <span asp-validation-for="Mistnost" class="text-danger"></span>
    </div>

    <div class="form-group my-3">
        <label asp-for="DoktorId"></label>
        <input asp-for="DoktorId" class="form-control" />
        <span asp-validation-for="DoktorId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Image">Image</label>
        <input id="File" class="form-control-file" asp-for="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <a asp-action="Select" class="btn btn-primary">Back to List</a>
    <button type="submit" class="btn btn-success">Create</button>
</form>


<partial name="_ValidationScriptsPartial" />
<script src="~/js/validations/FirstLetterCapitalizedCZ.js"></script>
<script src="~/js/Validations/FileContentValidation.js"></script>
