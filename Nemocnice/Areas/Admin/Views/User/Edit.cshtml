@model Nemocnice.application.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "User Edit";
}
<h2 class="text-center my-4">@ViewData["Title"]</h2>
<div class="container">
    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label" asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label" asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label" asp-for="Email"></label>
                <input class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label" asp-for="Username"></label>
                <input class="form-control" asp-for="Username">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Phone">Phone number</label>
            <input class="form-control" asp-for="Phone">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <a asp-action="Select" class="btn btn-primary">Back to List</a>
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>
</div>
