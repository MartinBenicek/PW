@model Nemocnice.application.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "User - Add";
}
<h1>@ViewData["Title"]</h1>
<form asp-action="Create" method="post">
    <div class="my-3">
        <label class="form-label" asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Username"></label>
        <input class="form-control" asp-for="Username">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Password">Password</label>
        <input asp-for="Password" type="password" id="user-pass" class="form-control" placeholder="Password" autofocus="">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Password">Password</label>
        <input asp-for="RepeatedPassword" type="password" id="user-repeatpass" class="form-control" placeholder="Repeat Password" autofocus="">
        <span asp-validation-for="RepeatedPassword" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label class="form-label" asp-for="Phone">Phone number</label>
        <input class="form-control" asp-for="Phone">
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <a asp-action="Select" class="btn btn-primary">Back to List</a>
    <button type="submit" class="btn btn-primary ms-3">Submit</button>
</form> 

@section Scripts
{
        <partial name="_ValidationScriptsPartial" />
        <script src="~/js/validations/FirstLetterCapitalizedCZ.js"></script>
}