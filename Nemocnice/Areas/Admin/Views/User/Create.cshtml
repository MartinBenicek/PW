@model Nemocnice.application.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Create User";
}
<h1 class="text-center my-4">@ViewData["Title"]</h1>
<div class="container">
    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label" asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label" asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label" asp-for="Email"></label>
                <input class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label" asp-for="Username"></label>
                <input class="form-control" asp-for="Username">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label" asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label">Repeat Password</label>
                <input asp-for="RepeatedPassword" type="password" class="form-control">
                <span asp-validation-for="RepeatedPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Phone">Phone number</label>
            <input class="form-control" asp-for="Phone">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <a asp-action="Select" class="btn btn-primary">Back to List</a>
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>
</div>