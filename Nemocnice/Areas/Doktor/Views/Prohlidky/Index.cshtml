@model IList<Nemocnice.application.ViewModels.ProhlidkyViewModel>

@section Styles
{
    <link rel="stylesheet" href="~/css/prohlidky.css" />
}

<h1>Vaše Prohlídky</h1>


<a asp-action="Create" class="btn btn-success my-3">Create Prohlídka</a>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Karta ID</th>
                <th>Ordinace ID</th>
                <th>Obrázek</th>
                <th>Budova</th>
                <th>Místnost</th>
                <th>Doktor ID</th>
                <th>Lékařské služby ID</th>
                <th>Úkon</th>
                <th>Vyšetření</th>
                <th>Očkování</th>
                <th>Datum</th>
                <th>Pacient ID</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prohlidka in Model)
            {
                <tr>
                    <td>@prohlidka.Karta.KartaId</td>
                    <td>@prohlidka.Ordinace.OrdinaceId</td>
                    <td>
                        <img src="@prohlidka.OrdinaceImageSrc" alt="Ordinace Image" style="max-width: 100px; max-height: 100px;" />
                    </td>
                    <td>@prohlidka.Ordinace.Budova</td>
                    <td>@prohlidka.Ordinace.Mistnost</td>
                    <td>@prohlidka.Ordinace.DoktorId</td>
                    <td>@prohlidka.LekarskeSluzby.LekarskeSluzbyId</td>
                    <td>@prohlidka.LekarskeSluzby.Ukon</td>
                    <td>@prohlidka.LekarskeSluzby.Vysetreni</td>
                    <td>@prohlidka.LekarskeSluzby.Ockovani</td>
                    <td>@prohlidka.LekarskeSluzby.Datum</td>
                    <td>@prohlidka.Karta.PacientId</td>
                    <td><a asp-action="Edit" asp-route-id="@prohlidka.LekarskeSluzby.LekarskeSluzbyId" class="btn btn-warning">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>