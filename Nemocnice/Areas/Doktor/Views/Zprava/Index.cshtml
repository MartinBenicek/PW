@model IList<Nemocnice.application.ViewModels.KartaLekarskaZprava>

@section Styles
{
    <link rel="stylesheet" href="~/css/zprava.css" />
}

<h1>Vaše Zprávy</h1>

<a asp-action="Create" class="btn btn-success my-3">Create lékařská zpráva</a>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Karta ID</th>
                <th>Pacient ID</th>
                <th>Lékařská zpráva ID</th>
                <th>Zpráva</th>
                <th>Datum</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var zprava in Model)
            {
                <tr>
                    <td>@zprava.Karta.KartaId</td>
                    <td>@zprava.Karta.PacientId</td>
                    <td>@zprava.LekarskaZprava.LekarskaZpravaId</td>
                    <td>@zprava.LekarskaZprava.Zprava</td>
                    <td>@zprava.LekarskaZprava.Datum</td>
                    <td><a asp-action="Edit" asp-route-id="@zprava.LekarskaZprava.LekarskaZpravaId" class="btn btn-warning">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>